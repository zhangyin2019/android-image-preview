<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 背景 -->
    <View
        android:id="@+id/preview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_000" />

    <!-- 框 -->
    <RelativeLayout
        android:id="@+id/preview_view_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 轮播 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/preview_view_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!-- 文字 -->
    <TextView
        android:id="@+id/preview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/col_000000_50_per"
        android:padding="16dp"
        android:text="这是一段描述这是一段描述这是一段描述这是一段描述"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>